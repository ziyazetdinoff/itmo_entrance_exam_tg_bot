# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic API ключ (для Claude LLM)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Полная строка подключения к БД
DATABASE_URL=postgresql://postgres:postgres@db:5432/itmo_bot_db

# Отдельные параметры БД (для Docker)
DB_HOST=db
DB_PORT=5432
DB_NAME=itmo_bot_db
DB_USER=postgres
DB_PASSWORD=postgres

# Режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к векторной базе данных
VECTOR_DB_PATH=./vector_db

# Размер чанков для RAG
CHUNK_SIZE=1000

# Перекрытие чанков
CHUNK_OVERLAP=200

# Таймаут запросов (секунды)
REQUEST_TIMEOUT=30

# Задержка между запросами (секунды)
RATE_LIMIT_DELAY=1

# Директория для данных
DATA_DIR=./data

# Директория для логов
LOGS_DIR=./logs 